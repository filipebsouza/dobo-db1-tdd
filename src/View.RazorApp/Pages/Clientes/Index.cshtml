@model List<Domain.Clientes.Dto.ClienteDto>

@if (Model == null)
{
    <p>Não há clientes</p>
}
else 
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Data de Nascimento</th>
                    <th scope="col">CPF</th>
                    <th scope="col">RG</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.SobreNome</td>
                        <td>@cliente.DataDeNascimento</td>
                        <td>@cliente.CPF</td>
                        <td>@cliente.RG</td>
                        <td><a class="nav-link text-dark" asp-controller="Cliente" asp-action="Editar">Editar</a></td>
                        <td><a class="nav-link text-dark" asp-controller="Cliente" asp-action="Excluir">Excluir</a></td>
                    </tr>   
                }
            </tbody>
        </table>
        <a class="nav-link text-dark" asp-controller="Cliente" asp-action="Incluir">Incluir</a>
    </div>
}


